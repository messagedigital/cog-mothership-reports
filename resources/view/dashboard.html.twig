{% extends 'Message:Mothership:ControlPanel::_templates/cp' %}

{% block stylesheets %}
	{{ parent() }}
	{% stylesheets
		'@Message:Mothership:Report::resources/assets/css/reports.css'

		output='/assets/css/ms_reports.css'
		filter='csscogulerewrite,?cssmin'
	%}
		<link rel="stylesheet" href="{{ asset_url }}">
	{% endstylesheets %}
{% endblock %}

{% block sidebar %}
	{{ render(controller('Message:Mothership:Commerce::Controller:Product:Sidebar#index', {'productID':product.id}))}}
{% endblock %}

{% block content %}
	<div class="dashboard">
		<div class="modules">
			{% for group in reportGroups %}
				{% for report in group %}
					{% if loop.first %}
						<br /><strong>{{ group.name }}</strong><br />
					{% else %}
						<a href="{{ url('ms.report.view', {'reportName': report.name}) }}">{{ report.displayName }}</a><br />
					{% endif %}
 				{% endfor %}
			{% endfor %}
		</div>
	</div>
{% endblock %}